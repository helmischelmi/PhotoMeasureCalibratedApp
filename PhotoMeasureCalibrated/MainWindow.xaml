<Window x:Class="PhotoMeasureCalibrated.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoMeasureCalibrated"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        mc:Ignorable="d"
        Title="Photo Measure Calibrated " Height="650" Width="1000">
    <Grid Background="LightGoldenrodYellow">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Height="25">
            <Label Margin="10 0">Select Folder:</Label>
            <TextBox Width="700" Text="{Binding ImageFolderPath}"></TextBox>
            <TextBlock Width="30"></TextBlock>
            <Button Content="Select" Width="100" Margin="10 0" 
                    Command="{Binding SelectFolderCommand}"/>
        </StackPanel>
        <telerik:RadImageEditor x:Name="ImageEditor"/>
        <Button Click="Button_Click" Content="Rotate picture" Grid.Row="2" />
    </Grid>
</Window>
